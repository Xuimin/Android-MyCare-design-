<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tracingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TracingApp">

        <activity
            android:name=".menu.DetailsActivity"
            android:exported="false"
            android:label="@string/details"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.example.tracingapp.menu.faq.FaqActivity"
            android:exported="false"
            android:label="@string/FAQ"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HealthAssessmentActivity"
            android:exported="false"
            android:label="@string/health_assessment"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".history.HistoryActivity"
            android:exported="false"
            android:label="@string/history"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ForgotPassActivity"
            android:exported="false"
            android:label="@string/forgot_pass"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/login"
            android:parentActivityName=".WelcomeActivity" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/register"
            android:parentActivityName=".WelcomeActivity" />
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".splash.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".splash.LoginSplashActivity"
            android:exported="false" />

    </application>
</manifest>